@model IEnumerable<Ecommerce.Catalog.Application.ViewModel.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}
<style>
    h4 {
        font-weight: 600;
    }

    p {
        font-size: 12px;
        margin-top: 5px;
    }

    .price {
        font-size: 30px;
        margin: 0 auto;
        color: #333;
    }

    .right {
        float: right;
        border-bottom: 2px solid #4B8E4B;
    }

    .thumbnail {
        opacity: 0.70;
        -webkit-transition: all 0.5s;
        transition: all 0.5s;
    }

        .thumbnail:hover {
            opacity: 1.00;
            box-shadow: 0px 0px 10px #4bc6ff;
        }

    .line {
        margin-bottom: 5px;
    }

    @@media screen and (max-width: 770px) {
        .right {
            float: left;
            width: 100%;
        }
    }

    .product_view .modal-dialog {
        max-width: 800px;
        width: 100%;
    }

    .pre-cost {
        text-decoration: line-through;
        color: #a5a5a5;
    }

    .space-ten {
        padding: 10px 0;
    }
</style>
<div class="container">

    <h1>Products administration</h1>
    <hr />
    <div class="row">
        <a asp-controller="AdminProducts" asp-action="NewProduct" class="btn btn-success right">+ Add New Product</a>
    </div>
    <hr />
    <div class="row">
        <!-- BEGIN PRODUCTS -->
        @{
            foreach (var product in Model.OrderBy(p => p.CategoryId))
            {
                <div class="col-md-3 col-sm-6">
                    <span class="thumbnail">
                        <img width="200" height="200" src="~/Images/@product.Image" />
                        <h4>@product.Name</h4>
                        <p>@product.StockQuantity em estoque</p>
                        <p>@product.Description</p>
                        <p class="price">@product.Value.ToString("C")</p>
                        <hr class="line">
                        <div class="row">
                            <a asp-controller="AdminProducts" asp-action="UpdateProduct" asp-route-id="@product.Id" class="btn btn-success right">Upddate</a> &nbsp;
                            <a asp-controller="AdminProducts" asp-action="UpdateStock" asp-route-id="@product.Id" class="btn btn-info right">Stock</a>
                        </div>
                    </span>
                </div>
            }
        }
        <!-- END PRODUCTS -->
    </div>
</div>

